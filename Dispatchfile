#!cue

resource "src-git": {
  type: "git"
  param url: "$(context.git.url)"
  param revision: "$(context.git.commit)"
}

resource "maven-cache": {
  type: "storage"
  param type: "gcs"
  param location: "s3://pumpkin-minio.pumpkin/artifacts"
  secrets: "BOTO_CONFIG"
}

task "build": {
  inputs: ["src-git", "maven-cache"]
  outputs: ["maven-cache"]

  steps: [
    {
      name: "build"
      image: "maven:3.6-jdk-8-slim"
      command: [ "mvn", "verify" ]
      workingDir: "/workspace/src-git"
    }
  ]
}

actions: [
  {
    tasks: ["build"]
    on push branches: ["master"]
  }
]