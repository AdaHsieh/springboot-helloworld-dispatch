#!cue

resource "src-git": {
  type: "git"
  param url: "$(context.git.url)"
  param revision: "$(context.git.commit)"
}

task "build": {
  inputs: ["src-git"]

  steps: [
    {
      name: "restore-cache"
      image: "meltwater/drone-cache"
      env: [
        {
          name: "AWS_ACCESS_KEY_ID"
          value: "abcd"
        },
        {
          name: "AWS_SECRET_ACCESS_KEY"
          value: "defghijk"
        },
        {
          name: "PLUGIN_PATH_STYLE"
          value: "true"
        },
        {
          name: "PLUGIN_MOUNT"
          value: "/root/.m2"
        },
        {
          name: "PLUGIN_RESTORE"
          value: "true"
        },
        {
          name: "PLUGIN_BUCKET"
          value: "artifacts"
        },
        {
          name: "PLUGIN_ENDPOINT"
          value: "http://pumpkin-minio.pumpkin"
        }
      ]
    },
    {
      name: "build"
      image: "maven:3.6-jdk-8-slim"
      command: [ "mvn", "verify" ]
      workingDir: "/workspace/src-git"
    }
  ]
}

actions: [
  {
    tasks: ["build"]
    on push branches: ["master"]
  }
]